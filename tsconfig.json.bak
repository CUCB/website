{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2018",
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importsNotUsedAsValues": "error",
    "isolatedModules": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": true,
    "strictNullChecks": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "alwaysStrict": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    // TODO raise an issue about this in the svelte repo
    "strictFunctionTypes": false, // <- causes typeerror in Logo.svelte due to what appears to be dodgy inference when enabled
    "baseUrl": "./",
    "paths": {
      "*": ["src/@customTypes/*"],
      "$app/*": [".svelte/dev/runtime/app/*", ".svelte/build/runtime/app/*"],
      "$lib/*": ["src/lib/*"]
    }
  },
  "include": ["src/**/*", "src/node_modules/**/*"],
  "exclude": ["node_modules/*", "__sapper__/*", "static/*", "src/@customTypes"]
}
