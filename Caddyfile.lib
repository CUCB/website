# error /* "Maintenance" 503

reverse_proxy /v1/graphql 127.0.0.1:8080

@hasura {
	path /hasura
	path /hasura/*
}

route @hasura {
	# add a /hasura endpoint for CLI connection if necessary
	uri strip_prefix /hasura
	reverse_proxy * 127.0.0.1:8080
}

root /* /srv
file_server /images/committee/*
file_server /static/*
file_server /docs/*

@sveltekit {
	not path /images/committee/*
	not path /static/*
	not path /hasura
	not path /hasura/*
	not path /docs/*
}

reverse_proxy @sveltekit 127.0.0.1:3001

@notAuth {
	not path /auth/*
}

# disable gzip for auth API since fetch doesn't like it
encode @notAuth gzip

handle_errors {
	@maintenance expression {http.error.status_code} == 502
	rewrite @maintenance /503
	# rewrite * /503.html
	# root /* /srv/static
	# file_server
	rewrite * /{http.error.status_code}
	reverse_proxy https://http.cat {
		header_up Host http.cat
	}
}
